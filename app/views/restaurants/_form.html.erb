<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :bek_customer_number %>
    <%= f.input :soap_url %>
    <%= f.input :soap_endpoint %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

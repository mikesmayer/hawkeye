<%= simple_form_for(@tip_jar_donation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.input :meals %>
    <%= f.input :deposit_date %>
    <%= f.input :restaurant_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

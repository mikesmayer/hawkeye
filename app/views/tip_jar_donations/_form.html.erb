<%= form_for(@tip_jar_donation, html: { novalidate: true }) do |f| %>

  <% if @tip_jar_donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tip_jar_donation.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @tip_jar_donation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :amount, "Deposit Amount", :class => 'control-label' %><br />

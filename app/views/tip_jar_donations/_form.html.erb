  </div>
  <div class="form-group">
    <%= f.label :restaurant_id, class: 'control-label' %><br />
    <%= f.select(:restaurant_id, Restaurant.all.map {|r| [r.name, r.id] }) %>
  </div>
  <div class="actions">
    <%= f.submit :submit, class: 'btn btn-success', disable_with: "Saving..." %>
  </div>

<%= link_to "Download CSV", { :controller => 'meals', :granularity => @granularity, :date_range => "#{@start_date}T#{@end_date}", :restaurant => @restaurant, :action => 'counts', :format => :csv }, class: 'btn btn-primary btn-xs pull-right' %>
<table class="table table-striped table-hover datatable" id="m4m_stats_tbl">
	<thead>
		<tr>
			<th>Date</th>
			<th>Meal 4 Meal</th>
			<th>Double</th>
			<th>Apparel</th>
			<th>Tip Jar</th>
			<th>One Time</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		<% @detail_totals.each do |row| %>
			<tr>
				<td><%= row.date %></td>
				<td><%= number_with_precision(row.m4m, :precision => 0, :delimiter => ",") %></td>
				<td><%= number_with_precision(row.dym, :precision => 0, :delimiter => ",") %></td>
				<td><%= number_with_precision(row.apparel, :precision => 0, :delimiter => ",") %></td>
				<td><%= number_with_precision(row.tip_jar, :precision => 0, :delimiter => ",") %></td>
				<td><%= number_with_precision(row.one_time, :precision => 0, :detimiter => ",") %></td>
				<td><%= number_with_precision(row.total, :precision => 0, :delimiter => ",") %></td>
			</tr>
		<% end %>
	</tbody>
</table>
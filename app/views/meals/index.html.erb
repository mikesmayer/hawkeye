
<div class="row">
	<div class="page-header page-header-with-buttons">
		<h1 class="pull-left">
		  <span class="glyphicon glyphicon-retweet"></span> <span>Meal 4 Meal Stats</span>
		</h1>
		<div class="pull-right">
		  <div class="btn-group">
		    <button class="btn btn-primary btn-sm">Last month</button>
		    <button class="btn btn-primary btn-sm">Last week</button>
		    <button class="btn btn-primary btn-sm">Yesterday</button>
		    <button class="btn btn-primary btn-sm" id="daterange">Custom</button>
		  </div>
		</div>
	</div>
</div> <!-- end header row -->


<div class="row">
	<div class="col-md-2">

	</div>
		<div class="col-md-2">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Total Meals</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="total_meals_info_box"><%= number_with_precision(@total_meals, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
	</div><!-- end 2 col cont -->
	<div class="col-md-2">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered"><span class="glyphicon glyphicon-cutlery"></span> M4M</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="m4m_meals_info_box"><%= number_with_precision(@m4m, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
	</div><!-- end 2 col cont -->
	<div class="col-md-2">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered"><span class="glyphicon glyphicon-gift"></span> Double</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="dym_meals_info_box"><%= number_with_precision(@dym, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
	</div><!-- end 2 col cont -->
	<div class="col-md-2">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered"><span class="glyphicon glyphicon-shopping-cart"></span> Apparel</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="apperal_meals_info_box"><%= number_with_precision(@apparel, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
	</div><!-- end 2 col cont -->
	<div class="col-md-2">

	</div>
</div><!-- End row of meal info boxes -->

<div class="row">
	<div class="col-md-6">
		<div class="panel panel-default">
		  <div class="panel-heading">Counts by day</div>
		  <div class="panel-body">
		    <div class="table-responsive">
				<table class="table table-striped table-hover datatable" id="m4m_stats_tbl">
					<thead>
						<tr>
							<th>Date</th>
							<th>Meal 4 Meal</th>
							<th>Double</th>
							<th>Apparel</th>

<%= form_for(@one_time_donation, html: { novalidate: true}) do |f| %>
  <% if @one_time_donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@one_time_donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
        <% @one_time_donation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :amount, "Donation Dollar Amount", :class => 'control-label' %><br />
      <%= f.number_field :amount %>
      <span class="help-block"></span>
  </div>

  <div class="hidden">
    <%= f.hidden_field :meals %>
  </div>

  <div class="form-group">
    <%= f.label :deposit_date, "Date", :class => 'control-label' %><br />
    <%= f.text_field :deposit_date, :class => 'datepicker date_field' %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description", :class => 'control-label' %><br />
    <%= f.text_field :description %>
  </div>


  <div class="form-group">
    <%= f.label :restaurant_id, class: 'control-label' %><br />
    <%= f.select(:restaurant_id, Restaurant.all.map {|r| [r.name, r.id] }, {}, {class: "form-control"}) %>
  </div>

  <div class="form-actions">
    <%= f.submit :submit, class: 'btn btn-success', disable_with: "Saving..." %>
  </div>
<% end %>

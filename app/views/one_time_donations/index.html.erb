<div class="row">
  <div class="col-md-6">
    <h1>One Time Donations</h1>
  </div>
  <div class="col-md-6">
    <div class="bs-callout bs-callout-info">
      <h4>One time donations can be used to account for meals generated from non-standard sources. Events like Run for 2 for example, can be entered here.
      </h4>
    </div>
  </div>
</div>
<div class="row">
  <%= link_to 'Add New One Time Donation', new_one_time_donation_path, :class => 'btn btn-success' %>
  <%= link_to 'Back to meal counts page', meals_path, :class => 'btn btn-primary btn-sm' %>
</div>
<br />
<div class="row">
  <table class="table table-striped table-hover datatable" id="one_time_donation_tbl">
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Meals</th>
        <th>Deposit date</th>
        <th>Restaurant</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @one_time_donations.each do |one_time_donation| %>
        <tr>
          <td><%= one_time_donation.description %></td>
          <td>$<%= number_with_precision(one_time_donation.amount, :precision => 2, :delimiter => ",") %></td>
          <td><%= number_with_precision(one_time_donation.meals, :precision => 0, :delimiter => ",") %></td>
          <td><%= one_time_donation.deposit_date.strftime("%b %d, %Y") %></td>
          <td><%= one_time_donation.restaurant.name %></td>
          <td><%= link_to 'Show', one_time_donation %></td>
          <td><%= link_to 'Edit', edit_one_time_donation_path(one_time_donation) %></td>
          <td><%= link_to 'Destroy', one_time_donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
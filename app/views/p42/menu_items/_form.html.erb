<%= form_for @p42_menu_item, :validate => true, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
  <% if @p42_menu_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@p42_menu_item.errors.count, "error") %> prohibited this p42_menu_item from being saved:</h2>

      <ul>
      <% @p42_menu_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class="col-md-6">
      <div class="well">
        <h4>Meal count settings</h4>
        <div class="form-group">
          <%= f.label :count_meal, "Used in meal count", :class => 'bold col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.select :count_meal, [['True', true], ['False', false]], {:prompt => 'Select One'}, {:class => "form-control"} %>
          </div>          
        </div>
        <div class="form-group">
          <%= f.label :count_meal_modifier, "Count modifier (this gets multiplied by the quantity of this item sold", :class => 'bold col-sm-6 control-label' %>
          <div class="col-sm-6">
            <%= f.number_field :count_meal_modifier, {:class => "form-control"} %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>

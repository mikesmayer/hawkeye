<%= form_for(@p42_meal_count_rule, remote: true, html: {role: :form, 'data-model' => 'p42_meal_count_rule'}) do |f| %>
  <% if @p42_meal_count_rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@p42_meal_count_rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @p42_meal_count_rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="hidden">
    <%= f.hidden_field :menu_item_id, :value => @p42_menu_item.id %>
  </div>

  <div class="form-group">
    <%= f.label :meal_modifier, class: 'control-label' %><br>
    <%= f.number_field :meal_modifier, class: 'form-control' %>
    <span class="help-block"></span>
  </div>


  <div class="form-group">
    <label class="control-label">Active Date Range</label>
    <div class="input-daterange input-group datepicker">      
        <%= f.text_field :start_date, {class: 'input-sm form-control' } %>
        <span class="input-group-addon">to</span>
        <%= f.text_field :end_date, {class: 'input-sm form-control' } %>
    </div>
    <label class="control-label text-muted text-center">Leave dates blank if the rule is applicable for all time</label>
    <span class="help-block"></span>
  </div>

  <div class="actions">
    <%= f.submit :submit, class: 'btn btn-success' %>
  </div>
<% end %>

<div class="row" style="border-bottom:1px solid #dddddd; margin-bottom:15px;">
	<div class="col-md-6">
		<h1 class="pull-left">Item Sales</h1>
	</div>
		
	<div class="col-md-6">
		<div class="pull-right">
			<div class="btn-toolbar" role="toolbar">
				<div class="btn-group top-margin" data-toggle="buttons">
					<label id="p42_selector" class="btn btn-success btn-xs active">
					    <input type="radio"  value="p42">Pitza 42
					</label>
					<label id="tacos_selector" class="btn btn-success btn-xs">
						<input type="radio" value="tacos">Tacos
					</label>
				</div>
				
				<div class="btn-group top-margin" data-toggle="buttons">
					<label id="date_filter_all_time" class="btn btn-primary btn-xs">
					    <input type="radio"  value="all">All
					</label>
					<label id="date_filter_current_year" class="btn btn-primary btn-xs">
						<input type="radio" value="current_year">Current year
					</label>
					<label id="date_filter_current_month" class="btn btn-primary btn-xs">
						<input type="radio" value="current_month">Current month
					</label>
					<label id="date_filter_current_week" class="btn btn-primary btn-xs active">
						<input type="radio" value="current_week">Current week
					</label>
					<label id="date_filter_daterange" class="btn btn-primary btn-xs">
						<input type="radio" value="custom">Custom
					</label>
				</div>
			</div>
		</div>

		<div class="clearfix"></div>
		<div class="pull-right col-md-5" id="custom_range_input" style="display:none; margin-top:0px; width:inherit;">  
			<form class="form-inline" role="form">
				<div class="form-group">
				    <div class="input-daterange input-group datepicker">      
				    	<input type="text" size="15" id="date_range_start" name="date_range_start" value="" class="input-sm form-control" />
				        <span class="input-group-addon">to</span>
				        <input type="text" size="15" id="date_range_end" name="date_range_end" value="" class="input-sm form-control" />
				    </div>						    
				    <span class="help-block"></span>
			 	</div>
			 	<div class="form-group">
			 		<button id="date_range_filter_btn" type="button" class="btn btn-success btn-xs">Filter</button> 
			 	</div>
			 </form>
		</div>
	</div>


		

</div> <!-- end header row -->

<div class="row">
	<div class="col-xs-6 col-md-2">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Total Net Sales</h3>
		  </div>
		  <div class="panel-body">
		    <h3 class="meal-info-box" id="net_sales_info_box">$<%= number_with_precision(@net_sales, :precision => 0, :delimiter => ",") %></h3>
		  </div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Total Discounts</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="discounts_info_box">$<%= number_with_precision(@discount_totals, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Meal Count</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="m4m_info_box"><%= number_with_precision(@m4m_totals, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
	</div>
	<div class="col-xs-6 col-md-2">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Total Food Sales</h3>
		  </div>
		  <div class="panel-body">
		    <h3 class="meal-info-box" id="food_sales_info_box">$<%= number_with_precision(@food_sales, :precision => 0, :delimiter => ",") %></h3>
		  </div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title text-centered">Total Apparel</h3>
		  </div>
		  <div class="panel-body">
		    <h2 class="meal-info-box" id="merch_sales_info_box">$<%= number_with_precision(@merch_sales, :precision => 0, :delimiter => ",") %></h2>
		  </div>
		</div>
		<!--
		<div class="panel panel-default">
		  <div class="panel-body">
		    <ul class="list-unstyled">
		    	<li><button class="btn btn-xs btn-success">Category Breakdown</button></li>
		    	<li><button class="btn btn-xs btn-success top-margin">Item level CSV</button></li>
		    </ul>
		  </div>
		</div>
	-->
	</div>	
	<div class="col-xs-12 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">Aggregate Item Sales
				<div class="pull-right padding-right">
			  		<form class="form-horizontal">
			  		<% %>
			  		<div class="form-group">
					    <div class="btn-group" data-toggle="buttons">
					        <label id="breakdown_by_day_selector" class="btn btn-default btn-xs active">
					            <input type="radio" name="granulatiry" value="day">day
					        </label>
					        <label id="breakdown_by_month_selector" class="btn btn-default btn-xs">
					            <input type="radio" name="granulatiry" value="month">month
					        </label>
					        <label id="breakdown_by_quarter_selector" class="btn btn-default btn-xs">
					            <input type="radio" name="granulatiry" value="quarter">quarter
					        </label>
					        <label id="breakdown_by_year_selector" class="btn btn-default btn-xs">
					            <input type="radio" name="granulatiry" value="year">year
					        </label>
					    </div>
					</div>
					</form>
					<% %>
			  	</div>
			</div><!-- end panel heading -->
			<div class="panel-body">
				<div class="ajax_loading" id="aggreage_loading_spinner"></div>
				<div class="table-responsive" id="aggregate_tbl_container">

					
					<!-- loaded from ajax item_sales.js -->
				</div>
			</div>
		</div><!-- end panel -->
	</div><!-- end 8 column cont -->

</div>

<div class="row">
	<div class="col-md-6">
		<h2 class="text-centered">Net Sales by Category</h2>
		<h5 class="text-centered" id="selected_dates">No sales available for </h5>
		<div id="cat_net_sales_cont">
			<!-- loaded in update_category_sales_chart function -->
		</div>
		
	</div>
	<div class="col-md-6">
		<h2 class="text-center">Item Counts by Category</h2>

		<div class="row" id="p42_category_select_cont">
			<div class="col-md-2"></div>
			<div class="col-md-3">
				<div class="btn-group top-margin" data-toggle="buttons">
					<label id="p42_net_sales_selector" class="btn btn-info btn-xs active">
					    <input type="radio"  value="net_sales">Net Sales
					</label>
					<label id="p42_quantity_selector" class="btn btn-info btn-xs">
						<input type="radio" value="quantity">Quantity
					</label>
				</div>
			</div>
			<div class="col-md-5 top-margin">
				<form class="text-center" role="form">
					<div class="form-group">
						<select name="p42_cat_select" id="p42_cat_select" class="form-control">
							<option value="-1">Choose category</option>
							<% @p42_categories.each do |cat| %>
								<option value="<%= cat.id %>"><%= cat.name %></option>
							<% end %>
						</select>
					</div>
				</form>
			</div>
			<div class="col-md-2"></div>
		</div>

		<div class="row hidden" id="tacos_category_select_cont">
			<div class="col-md-2"></div>
			<div class="col-md-3">
				<div class="btn-group top-margin" data-toggle="buttons">
					<label id="tacos_net_sales_selector" class="btn btn-info btn-xs active">
					    <input type="radio"  value="net_sales">Net Sales
					</label>
					<label id="tacos_quantity_selector" class="btn btn-info btn-xs">
						<input type="radio" value="quantity">Quantity
					</label>
				</div>
			</div>
			<div class="col-md-5 top-margin">
				<form class="text-center" role="form">
					<div class="form-group">
						<select name="tacos_cat_select" id="tacos_cat_select" class="form-control">
							<option value="-1">Choose category</option>
							<% @tacos_categories.each do |cat| %>
								<option value="<%= cat.id %>"><%= cat.name %></option>
							<% end %>
						</select>
					</div>
				</form>
			</div>
			<div class="col-md-2"></div>
		</div>
		
		<div class="ajax_loading hidden" id="category_product_mix_spinner"></div>
		<div id="item_sales_items_container">
			<!-- loaded in item_sales_get_category_breakdown() -->
		</div>
	</div>
</div>



<!-- div used just to ID the page from JS -->
<div id="item_sales_index_page"></div>